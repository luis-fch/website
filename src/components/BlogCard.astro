---
import { getLangFromUrl } from '../i18n/utils';
interface Props {
  title: string;
  description: string;
  published_date: string;
  id: string;
}
const { title, description, published_date, id } = Astro.props as Props;
const lang = getLangFromUrl(Astro.url);
const slug = id.split('/').slice(1).join('/');
---

<a href={`/${lang}/blog/${slug}`} class="pb-2 group">
  <div class="flex items-baseline gap-1">
    <h2 class="text-lg font-bold underline decoration-site-primary">{title}</h2>
    <span class="text-current/60">{published_date}</span>
  </div>
  <p class="text-base">{description}</p>
</a>

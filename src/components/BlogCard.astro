---
const { title, description, published_date, id } = Astro.props;
---

<a href={`/blog/${id}`} class="px-2 py-2 hover:shadow-md transition-shadow rounded-lg">
  <div class="flex items-baseline gap-1">
    <h2 class="text-2xl font-bold">{title}</h2>
    <p class="">{published_date}</p>
  </div>
  <p class="text-lg">{description}</p>
</a>

---
const { title, description, published_date, id } = Astro.props;
---

<a href={`/blog/${id}`} class="py-2 group">
  <div class="flex items-baseline gap-1">
    <h2 class="text-2xl font-bold group-hover:underline">{title}</h2>
    <p class="dark:text-gray-400 text-gray-600">{published_date}</p>
  </div>
  <p class="text-lg">{description}</p>
</a>

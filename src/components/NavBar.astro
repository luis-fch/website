---
import { Toggle } from "astro-theme-toggle";

const links = [
  { href: "/blog", label: "Blog" },
];
---

<nav class="flex items-center px-4 py-8 text-xl">
  <div class="flex-1">
    <a class="text-xl" href="/">LF</a>
  </div>
  <div class="flex-none">
    <ul class="flex flex-row gap-8">
      {
        links.map((link) => (
          <li>
            <a class="hover:underline" href={link.href}>
              {link.label}
            </a>
          </li>
        ))
      }
      <li class="flex items-center">
        <Toggle style="width: 24px; height: 24px;" />
      </li>
    </ul>
  </div>
</nav>

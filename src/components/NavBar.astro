---
import { Toggle } from "astro-theme-toggle";

const links = [
  { href: "/blog", label: "Blog" },
  { href: "/about", label: "About" },
];

// Get current page URL
const currentUrl = Astro.url.pathname;
const isActive = (href: string) => currentUrl === href;
// Define a class for active links
const activeClass = "text-(--primary-color)";
const inactiveClass =
  "hover:text-(--primary-color) transition ease-in-out duration-200";
// Apply active class conditionally
const getLinkClass = (href: string) =>
  isActive(href) ? activeClass : inactiveClass;
---

<div class="flex items-center px-4 py-8 text-xl">
  <div class="flex-1">
    <a class="text-xl" href="/">LF</a>
  </div>
  <div class="flex-none">
    <ul class="flex flex-row gap-8">
      {
        links.map((link) => (
          <li>
            <a class={getLinkClass(link.href)} href={link.href}>
              {link.label}
            </a>
          </li>
        ))
      }
      <li class="flex items-center">
        <Toggle style="width: 24px; height: 24px;" />
      </li>
    </ul>
  </div>
</div>

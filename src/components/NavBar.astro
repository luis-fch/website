---
import { Toggle } from "astro-theme-toggle";

const links = [
  { href: "/blog", label: "blog", aria: "Blog page" },
];
---

<nav class="flex items-center px-4 py-4 text-lg">
  <div class="flex-1">
    <a href="/" aria-label="Home page">LF</a>
  </div>
  <div class="flex-none">
    <ul class="flex flex-row gap-8">
      {
        links.map((link) => (
          <li>
            <a class="hover:underline" href={link.href} aria-label={link.aria}>
              {link.label}
            </a>
          </li>
        ))
      }
      <li class="flex items-center">
        <Toggle style="width: 24px; height: 24px;" />
      </li>
    </ul>
  </div>
</nav>
